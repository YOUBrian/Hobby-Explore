<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="photo"
            type="com.example.hobbyexplore.profile.ProfileViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.ProfileFragment">

        <View
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:layout_marginEnd="-350dp"
            android:layout_marginTop="-230dp"
            android:background="@drawable/blue_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:layout_marginStart="-350dp"
            android:layout_marginBottom="-230dp"
            android:background="@drawable/yellow_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_content_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text=""
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView"
                    app:layout_constraintTop_toTopOf="@+id/imageView" />

                <TextView
                    android:id="@+id/mbti_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="MBTI性格：ESTP"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/select_hobby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="選擇的興趣：棒球"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/mbti_result" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="center"
                    app:imageUrl="@{photo.userPhotoUrl}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/mbti_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/blue_button_full"
            android:padding="8dp"
            android:text="MBTI測驗"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/about_app_button"
            app:layout_constraintStart_toStartOf="@+id/profile_content_cardView"
            app:layout_constraintTop_toBottomOf="@+id/profile_content_cardView" />

        <Button
            android:id="@+id/error_report_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button_full"
            android:padding="8dp"
            android:text="錯誤回報"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/profile_content_cardView"
            app:layout_constraintStart_toEndOf="@+id/about_app_button"
            app:layout_constraintTop_toTopOf="@+id/about_app_button" />

        <Button
            android:id="@+id/about_app_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_button_full"
            android:padding="8dp"
            android:text="關於趣探"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/error_report_button"
            app:layout_constraintStart_toEndOf="@+id/mbti_button"
            app:layout_constraintTop_toTopOf="@+id/mbti_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>